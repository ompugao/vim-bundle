snippet     gdb
abbr        gdb
options     head
    launch-prefix="xterm -fn 10x20 -geometry 1000x700+40+40 -e gdb --args "

snippet     valgrind
abbr        valgrind
options     head
    launch-prefix="xterm -fn 10x20 -geometry 1000x700+40+40 -e valgrind -v --error-limit=no --leak-check=full --show-reachable=no "
